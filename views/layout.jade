doctype html
html(lang='en')
  head
    title Welcome
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .navbar.navbar-default(role='navigation' style="background-color:black;color:white")
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/' style="font-size:20px;color:white") Node Authentication
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if user
             li(class=(title == 'Members' ? 'active' : '') style=(title=='Members'? 'color:black': 'color:white'))
               a(href='/') Members
            if !user
             li(class=(title == 'Register' ? 'active' : ''))
               a(href='/users/register' style=(title=='Register'? 'color:black': 'color:white')) Register
             li(class=(title == 'Login' ? 'active' : ''))
               a(href='/users/login' style=(title=='Login'? 'color:black': 'color:white')) Login
          ul.nav.navbar-nav.navbar-right
           if user
            li
               a(href='/users/logout' style='color:white') Logout
    .container
     != messages()
     block content
     
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')